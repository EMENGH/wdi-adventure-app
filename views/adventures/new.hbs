<div id='updateConatiner'>
  <div class="container create-container">
    <div class="row header">
      <h1 class= "create-title">Create Your Adventure &nbsp;</h1>
      <h3 class= "create-fillForm">Fill out the form below to make a new adventure for everyone to enjoy!</h3>
    </div>
    <div class="row body">
      <form action="/adventures" method="POST">
        <ul>

          <li>
            <p class="left">
              <label for="Adventure-title">Adventure Title</label>
              <input type="text" name="title" placeholder="Name" required/>
            </p>
          </li>
          <li>
            <p class="pull-right">
              <label for="Adventure-type">Adventure-type</label>
              <select name='categories' required>
                  <option selected disabled>Choose here</option>
                  <option value="indoors">indoors</option>
                  <option value="outdoors">outdoors</option>
                  <option value="dining">dining</option>
        </select>
            </p>
          </li>
          <li>
            <p>
              <label for="Activities">Activity</label>
              <input type="text" name="subCategories" placeholder="Activity type" required/>
            </p>
          </li>

          <li>
            <p>
              <label for="Images">Image Link</label>
              <input type="text" name="images" placeholder="Image link" />
            </p>
          </li>
          <li>
            <label for="comments">comments</label>
            <textarea cols="50" rows="10" name="description" placeholder="Tell us all about it! The more you can write the better!"></textarea>
          </li>

          <li>
            <input class="btn btn-submit" type="submit" value="Submit" />
            <small>or press <strong>enter</strong></small>
          </li>

        </ul>
      </form>
    </div>
  </div>
</div>