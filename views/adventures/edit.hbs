<div id='updateConatiner'>
<div class="container">
  <div class="row header">
    <h1>Update Your Adventure &nbsp;</h1>
    <h3>Fill out the form below to make your experience better!</h3>
  </div>
  <div class="row body">
    <form action="/adventures/edit/{{adventure._id}}?_method=PUT" method="POST">
      <ul>
        
        <li>
          <p class="left">
            <label for="Adventure-title">Adventure Title</label>
            <input type="text" name="title" placeholder="Name" value="{{adventure.title}}"/>
          </p>
        </li>
        <li>
          <p class="pull-right">
            <label for="Adventure-type">Adventure-type</label>
        <select name='categories'>
        <option value="indoors">indoors</option>
        <option value="outdoors">outdoors</option>
        <option value="dining">dining</option>
        </select>         
         </p>
        </li>
        <li>
          <p>
            <label for="Activities">Activity</label>
            <input type="Activities" name="subCategories" placeholder="Activity type" value="{{adventure.subCategories}}" />
          </p>
        </li> 

        <li>
          <p>
            <label for="Activities">Image Link</label>
            <input type="Activities" name="images" placeholder="Image link" value="{{adventure.images}}" />
          </p>
        </li>        
        <li>
          <label for="comments">comments</label>
          <textarea cols="50" rows="10" name="description">{{adventure.description}}</textarea>
        </li>
        
        <li>
          <input class="btn btn-submit" type="submit" value="Submit" />
          <small>or press <strong>enter</strong></small>
        </li>
        
      </ul>
    </form>  
  </div>
</div>
</div>